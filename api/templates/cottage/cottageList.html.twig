{% extends 'base.html.twig' %}


{% block title %}Etang des Garennes{% endblock %}


{% block body %}


    <main class="mt-5" id="cottageList">

        <section class="cottages p-5">
            <div class="container text-center">
                <h1 >Nos chambres</h1>

                <div class="row my-5">
                   {% for cottage in cottages %}
                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card" style="background-color: white;">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="{{ asset('build/pexels-maria-orlova-4906407.jpg') }}" class="img-fluid" />
                                <a href="{{ path('app_cottage_id', {'id': cottage.id}) }}">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h3 class="card-title">{{ cottage.name }}</h3>
                                <h4 class="card-subtitle">{{ cottage.price }} â‚¬</h4>
                                <p class="card-text">{{ cottage.description }}</p>
                                 <a href="{{ path('app_cottage_id', {'id': cottage.id}) }}" class="btn-home">Voir</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
             
            </div>

        </section>

    </main>

{% endblock %}
