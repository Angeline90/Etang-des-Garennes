{% extends 'base.html.twig' %}

{% block title %}Cottage{% endblock %}

{% block body %}
    <h1>Cottage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cottage.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cottage.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cottage.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cottage.price }} €</td>
            </tr>
            <tr>
                <th>Capacité</th>
                <td>{{ cottage.capacity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cottage_index') }}">Retour à la liste</a>

    <a href="{{ path('app_cottage_edit', {'id': cottage.id}) }}">Modifier</a>

    {{ include('cottage/_delete_form.html.twig') }}
{% endblock %}
