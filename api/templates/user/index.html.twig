{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Les inscriptions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Adress</th>
                {# <th>Password</th>
                <th>IsVerified</th> #}
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.adress }}</td>
                 <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {#<td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td> #}
                
                
                
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">voir plus d'infos(les resas)</a>
                     <a href="{{ path('app_profile_edit', {'id': user.id}) }}">edit</a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_register') }}">Cr√©er un user</a>
    </br>
    <a href="{{ path('app_admin') }}">Retour page admin</a>
{% endblock %}
