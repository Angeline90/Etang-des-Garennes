{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<main class="my-5">
    <section class="user-list py-5">
        <h1 class="text-center mb-3 font-weight-normal">Les inscriptions</h1>

        <table class="table">
            <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    {# <th>Password</th>
                    <th>IsVerified</th>
                    <th>Roles</th> #}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    {# <td>{{ user.id }}</td> #}
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone }}</td>
                    <td>{{ user.adress }}</td>
                    {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    {#<td>{{ user.password }}</td>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td> #}
                    
                    
                    
                    <td class="d-flex flex-column">
                        {# <a class="btn-home mb-3" href="{{ path('app_user_show', {'id': user.id}) }}">Voir (Réservations)</a> #}
                        <a class="btn-home mb-3" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                        <a class="btn-home" href="{{ path('app_user_delete', {'id': user.id}) }}">Supprimer l'utilisateur</a>
                    </td> 
                </tr>

            {% else %}
                <tr>
                    <td colspan="10">Aucun enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="container d-flex justify-content-evenly">
            <a class="btn-home" href="{{ path('app_register') }}">Créer un user</a>
        
            <a class="btn-home" href="{{ path('app_admin') }}">Retour page admin</a>
        </div>
    </section>
</main>
{% endblock %}
