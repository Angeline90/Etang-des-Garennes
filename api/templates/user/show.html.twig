{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<main class="my-5">
    <section class="user-show py-5">
        <h1 class="text-center mb-3 font-weight-normal">Compte de : {{ user.name }} {{ user.firstname }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>IsVerified</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.adress }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ user.phone }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn-home" href="{{ path('app_user_index') }}">Retour à la liste</a>

    {# <a href="{{ path('app_profile_edit', {'id': user.id}) }}">Modifier</a> #}

    {# {{ include('user/_delete_form.html.twig') }} #}

    </section>
</main>
{% endblock %}
