{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <section class="profile-show py-5">

        <h1 class="text-center mb-3 font-weight-normal">Mon profil</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.adress }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ user.phone }}</td>
                </tr>
                <tr>
                    <td class="d-flex justify-content-evenly">
                        <a class="btn-home" href="{{ path('app_profile_edit') }}">Modifier mes infos personnelles</a>
                        {{ include('profile/_delete_form.html.twig') }}
                    </td>
                </tr>
               
            </tbody>
        </table>

