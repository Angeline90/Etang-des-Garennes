{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <div class="encart">
        {{ form_start(contactForm) }}
        <div class="class-errors">
            {{ form_errors(contactForm)}}
        </div>
        <form>
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input type="text" id="form6Example2" class="form-control" />
                        <label class="form-label" for="form6Example2">{{ form_row(contactForm.fullName, {
                            label: 'Nom et Pr√©nom'
                        }) }}</label>
                    </div>
                </div>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" id="form6Example5" class="form-control" />
                <label class="form-label" for="form6Example5">{{ form_row(contactForm.email, {
                    label: 'Email'
                }) }}</label>
            </div>

            <!-- Text input -->
            <div class="form-outline mb-4">
                <input type="text" id="form6Example4" class="form-control" />
                <label class="form-label" for="form6Example4">{{ form_row(contactForm.subject,{
                    label: 'Sujet'
                }) }}</label>
            </div>

             <!-- Textarea input -->
            <div class="form-outline mb-4">
                <textarea id="form6Example4" class="form-control" /></textarea>
                <label class="form-label" for="form6Example4">{{ form_row(contactForm.message,{
                    label: 'Message'
                }) }}</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">{{ button_label|default('Envoyer') }}</button>
        </form>
        {{ form_end(contactForm) }}
    </div>
</div>

{% endblock %}
