{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="my-5"> 
<section class="registerForm py-5">
    <div class="container d-flex flex-column align-items-center">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

    <h1 class="text-center mb-3">Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name, {
            label:'Nom'
        }) }}
        {{ form_row(registrationForm.firstname, {
            label:'Prénom'
        }) }}
        {{ form_row(registrationForm.email, {
            label:'Email'
        }) }}
        {{ form_row(registrationForm.password.first, {
            label: 'Mot de passe',
        }) }}
        {{ form_row(registrationForm.password.second, {
            label: 'Confirmez votre mot de passe',

        }) }}
        {{ form_row(registrationForm.phone , {
            label:'Téléphone'
        }) }}
        {{ form_row(registrationForm.adress , {
            label:'Adresse'
        }) }}
        {# {{ form_row(registrationForm.agreeTerms) }} #}

        <button type="submit" class="btn-home mt-4">S'enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>
</section>
</main>
{% endblock %}
