{% extends "base.html.twig" %}

{% block javascripts %}
    {{ parent()}}
    <script src="https://js.stripe.com/v3/"></script>
{% endblock %}

{% block body %}
    <div class="container">
      <!-- Section: Cart -->
      <section class="mt-5">
        <div class="row gx-lg-5">
          <div class="col-lg-8 mb-4 mb-md-0">
            <!-- Section: Product list -->
            <section class="mb-5">
  
              <!-- Single item -->
              <div class="row border-bottom mb-4">
                <div class="col-md-2 mb-4 mb-md-0">
                  <div
                       class="
                              bg-image
                              ripple
                              rounded-5
                              mb-4
                              overflow-hidden
                              d-block
                              "
                       data-ripple-color="light"
                       >
                       {% if booking.cottage.card.path is defined %}
                    <img
                         src="/images/{{ booking.cottage.card.path }}"
                         class="w-100"
                         alt=""
                         />
                         {% else %}

                             <img
                         src="{{ asset('build/pexels-maria-orlova-4906407.jpg') }}"
                         class="w-100"
                         alt=""
                         />

                         {% endif %}
                    <a href="#!">
                      <div class="hover-overlay">
                        <div
                             class="mask"
                             style="background-color: hsla(0, 0%, 98.4%, 0.2)"
                             ></div>
                      </div>
                    </a>
                  </div>
                </div>
  
                <div class="col-md-8 mb-4 mb-md-0">
                  <p class="fw-bold">{{booking.cottage.name}}</p>
                  <p class="mb-1">
                    <span class="text-muted me-2">Description : </span><span>{{booking.cottage.description}}</span>
                  </p>
                  <p>
                    <span class="text-muted me-2">Durée:</span
                      ><span> {{booking.getFormattedDuration()}} jours</span>
                  </p>
                <p>
                    <span class="text-muted me-2">Détails :</span>
                        <span>Du : {{booking.arrivalDate | date("%i'%s''")}} au : {{booking.departureDate | date("%i'%s''")}} </span>
                  </p>
                </div>
              </div>
              <!-- Single item -->
            </section>
            <!-- Section: Product list -->
  
            <!-- Section: Details -->
            <section class="">
  
              <div>
  
                <img
                     class="mr-2"
                     width="45px"
                     src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                     alt="Visa"
                     />
                <img
                     class="mr-2"
                     width="45px"
                     src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                     alt="American Express"
                     />
                <img
                     class="mr-2"
                     width="45px"
                     src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                     alt="Mastercard"
                     />
                <img
                     class="mr-2"
                     width="45px"
                     src="https://mdbootstrap.com/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.png"
                     alt="PayPal acceptance mark"
                     />
              </div>
            </section>
            <!-- Section: Details -->
          </div>
  
          <div class="col-lg-4 mb-4 mb-md-0">
            <!-- Section: Summary -->
            <section class="shadow-4 p-4 rounded-5 mb-4">
              <h5 class="mb-5">The total amount of</h5>
  
              <div class="d-flex justify-content-between mb-3">
                <span>Prix par nuit </span>
                <span>{{booking.cottage.price}} €</span>
              </div>
              <div class="d-flex justify-content-between">
                <span>Durée :</span>
                <span>{{booking.getFormattedDuration()}} jour{{booking.getFormattedDuration() > 1 ? 's' : ''}}</span>
              </div>
              <hr class="my-4" />
              <div class="d-flex justify-content-between fw-bold mb-5">
                <span>The total</span>
                <span>{{booking.getFormattedDuration() * booking.cottage.price}} €</span>
              </div>
  
              <button type="button" class="btn btn-primary btn-rounded w-100">
                Got to checkout
              </button>
            </section>
            <!-- Section: Summary -->
          </div>
        </div>
      </section>
      <!-- Section: Cart -->
      <form action="/charge" method="post" id="payment-form">
  <div class="form-row">
    <label for="card-element">
      Credit or debit card
    </label>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display Element errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <button>Submit Payment</button>
</form>
    </div>
    <script>
        const stripe = Stripe('pk_test_51NG4OeHXQpz0i3WhZfSLD5tMgcmPldaueId2QZqfjLL2OCSaiAGgMH1mC2GQDAiiX4Sse7Y5dLBaSpWTCfgkiZ6i00AM7GZrqK');
        const elements = stripe.elements();
        // Custom styling can be passed to options when creating an Element.
const style = {
  base: {
    // Add your base input styles here. For example:
    fontSize: '16px',
    color: '#32325d',
  },
};

// Create an instance of the card Element.
const card = elements.create('card', {style});

// Add an instance of the card Element into the `card-element` <div>.
card.mount('#card-element');
// Create a token or display an error when the form is submitted.
const form = document.getElementById('payment-form');

const stripeTokenHandler = async (data) => {
    const response = await fetch(
        "https://localhost/booking/{{ booking.id }}/payment/charge",
        {
            method: "PATCH",
            body: JSON.stringify({token: data.id}),
            headers: {
                Accept: "application/json",
                "Content-Type": "application/merge-patch+json",
            },
        }
    )
    if (response.status === 200) {
        window.location = `http://localhost/app/booking/my`;
    }
    console.log(await response.json());
};

form.addEventListener('submit', async (event) => {
  event.preventDefault();

console.log(card);
  const {token, error} = await stripe.createToken(card);
  console.log(token, error);

  if (error) {
    // Inform the customer that there was an error.
    const errorElement = document.getElementById('card-errors');
    errorElement.textContent = error.message;
  } else {
    // Send the token to your server.
    stripeTokenHandler(token);
  }
});
    </script>
{% endblock %}